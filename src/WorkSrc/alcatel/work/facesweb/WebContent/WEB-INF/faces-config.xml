<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>
	<lifecycle>
		<phase-listener>com.ibm.faces.webapp.ValueResourcePhaseListener</phase-listener>
	</lifecycle>
	<application>
		<state-manager>
		com.ibm.faces.application.DevelopmentStateManager</state-manager>
		<property-resolver>
		com.ibm.faces.databind.SelectItemsPropResolver</property-resolver>
		<variable-resolver>
		com.ibm.faces.databind.SelectItemsVarResolver</variable-resolver>
	</application>
	<managed-bean>
		<managed-bean-name>sharedBean</managed-bean-name>
		<managed-bean-class>beans.SharedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>movieBean</managed-bean-name>
		<managed-bean-class>beans.MovieBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
	      <property-name>context</property-name>
    		  <value>movieList</value>
	   </managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>movieDetails</managed-bean-name>
		<managed-bean-class>beans.Movie</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>pc_Login</managed-bean-name>
		<managed-bean-class>pagecode.Login</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_Calculate</managed-bean-name>
		<managed-bean-class>pagecode.Calculate</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>calculator</managed-bean-name>
		<managed-bean-class>beans.CalculatorBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>operation</property-name>
			<value>Subtract</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_Error</managed-bean-name>
		<managed-bean-class>pagecode.Error</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_Userdetails</managed-bean-name>
		<managed-bean-class>pagecode.Userdetails</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_Catalog</managed-bean-name>
		<managed-bean-class>pagecode.Catalog</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_MovieDetails</managed-bean-name>
		<managed-bean-class>pagecode.MovieDetails</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
		<managed-bean>
		<managed-bean-name>wasAdmin</managed-bean-name>
		<managed-bean-class>jmonitor.WasadminBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
		<managed-bean>
		<managed-bean-name>sessionBean</managed-bean-name>
		<managed-bean-class>java.util.HashMap</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
		<managed-bean>
			<managed-bean-name>pc_Test1</managed-bean-name>
			<managed-bean-class>pagecode.custom.Tab_panel</managed-bean-class>
			<managed-bean-scope>request</managed-bean-scope>
		</managed-bean>
		<managed-bean>
			<managed-bean-name>pc_TestIBM</managed-bean-name>
			<managed-bean-class>pagecode.custom.TestIBM</managed-bean-class>
			<managed-bean-scope>request</managed-bean-scope>
		</managed-bean>
		<managed-bean>
			<managed-bean-name>treeRoot</managed-bean-name>
			<managed-bean-class>com.ibm.odcb.tutorial.businessobjects.Root</managed-bean-class>
			<managed-bean-scope>session</managed-bean-scope>
		</managed-bean>
		<managed-bean>
			<managed-bean-name>pc_TestTree</managed-bean-name>
			<managed-bean-class>pagecode.custom.TestTree</managed-bean-class>
			<managed-bean-scope>request</managed-bean-scope>
		</managed-bean>
	
	<lifecycle>
		<phase-listener>beans.SessionListener</phase-listener>
	</lifecycle>
	
	
  <navigation-rule>
    <from-view-id>/login.jsp</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>success</from-outcome>
      <to-view-id>/userdetails.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/userdetails.jsp</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>catalog</from-outcome>
      <to-view-id>/catalog.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/catalog.jsp</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>back</from-outcome>
      <to-view-id>/userdetails.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>movieDetails</from-outcome>
      <to-view-id>/movieDetails.jsp</to-view-id>
    </navigation-case>
    
  </navigation-rule>

 <navigation-rule>
    <from-view-id>/movieDetails.jsp</from-view-id>
    <navigation-case>
      <description>
      The movie details screen
      </description>
      <from-outcome>closeDetails</from-outcome>
      <to-view-id>/catalog.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <description>
      The movie details screen
      </description>
      <from-outcome>saveDetails</from-outcome>
      <to-view-id>/catalog.jsp</to-view-id>
    </navigation-case>
 	
  </navigation-rule>
 <factory>
 	<faces-context-factory>
 	com.ibm.faces.context.AjaxFacesContextFactory</faces-context-factory>
 	<render-kit-factory>
 	com.ibm.faces.renderkit.AjaxRenderKitFactory</render-kit-factory>
 </factory>

<!--  custom components  -->
 <component>
      <component-type>components.ImageButton</component-type>
      <component-class>components.ImageButton</component-class>
   </component> 
<component>
      <component-type>components.UIMenu</component-type>
      <component-class>components.UIMenu</component-class>
   </component> 
   
   <component>
      <component-type>components.Display</component-type>
      <component-class>components.Display</component-class>
   </component> 

	<render-kit>
      <renderer>
         <component-family>javax.faces.Command</component-family>
         <renderer-type>components.UIMenu</renderer-type>
         <renderer-class>components.UIMenuRenderer</renderer-class>
      </renderer>      
      
   </render-kit>
   
   <component>
    <component-type>
      components.TabLabel
    </component-type>
    <component-class>
      components.UITabLabel
    </component-class>
  </component>

  <component>
    <component-type>
      components.Tree
    </component-type>
    <component-class>
      components.UITree
    </component-class>
  </component>

  <render-kit>
    <renderer>
      <component-family>javax.faces.Panel</component-family>
      <renderer-type>components.Tabbed</renderer-type>
      <renderer-class>
        components.TabbedRenderer
      </renderer-class>
    </renderer>
    <renderer>
      <component-family>components.Tree</component-family>
      <renderer-type>components.Tree</renderer-type>
      <renderer-class>
        components.TreeRenderer
      </renderer-class>
    </renderer>
  </render-kit>
   

<!--  definitions for the was admin application -->
	
	<!--  navigation rules -->
	 <navigation-rule>
    <from-view-id>/wasmon/login.jsp</from-view-id>
    <navigation-case>
      <description>
		The login page
      </description>
      <from-outcome>login</from-outcome>
      <to-view-id>/wasmon/serverList.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
	
 <navigation-rule>
    <from-view-id>/wasmon/left.jsp</from-view-id>
    <navigation-case>
      <description>
		The login page
      </description>
      <from-outcome>serverList</from-outcome>
      <to-view-id>/wasmon/serverList.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <description>
		The login page
      </description>
      <from-outcome>logout</from-outcome>
      <to-view-id>/wasmon/login.jsp</to-view-id>
    </navigation-case>
    
  </navigation-rule>	
  
  <navigation-rule>
    <from-view-id>/wasmon/serverList.jsp</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>newServer</from-outcome>
      <to-view-id>/wasmon/newServer.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/wasmon/newServer.jsp</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>close</from-outcome>
      <to-view-id>/wasmon/serverList.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

<navigation-rule>
    <from-view-id>/wasmon/serverList.jsp</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>serverDetails</from-outcome>
      <to-view-id>/wasmon/details.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>


<navigation-rule>
    <from-view-id>/wasmon/details.jsp</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>back</from-outcome>
      <to-view-id>/wasmon/serverList.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>jvmDetails</from-outcome>
      <to-view-id>/wasmon/jvmDetails.jsp</to-view-id>
    </navigation-case>    
    <navigation-case>
      <from-outcome>general</from-outcome>
      <to-view-id>/wasmon/general.jsp</to-view-id>
    </navigation-case>    
    <navigation-case>
      <from-outcome>datasources</from-outcome>
      <to-view-id>/wasmon/datasources.jsp</to-view-id>
    </navigation-case>    
    <navigation-case>
      <from-outcome>applications</from-outcome>
      <to-view-id>/wasmon/applications.jsp</to-view-id>
    </navigation-case>    
    
    
  </navigation-rule>
  

<navigation-rule>
    <from-view-id>/wasmon/*</from-view-id>
    <navigation-case>
      <description>
        Any action on chooseLocale should cause navigation to storeFront.jsp
      </description>
      <from-outcome>back</from-outcome>
      <to-view-id>/wasmon/details.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  
  <!--  generic navigation rule for the left menu -->
    <navigation-rule>
    <from-view-id>/wasmon/*</from-view-id>
    <navigation-case>
      <from-outcome>serverList</from-outcome>
      <to-view-id>/wasmon/serverList.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>logout</from-outcome>
      <to-view-id>/wasmon/logout.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
    <navigation-rule>
    <from-view-id>/wasmon/logout.jsp</from-view-id>
    <navigation-case>
      <from-outcome>login</from-outcome>
      <to-view-id>/wasmon/login.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

</faces-config>
