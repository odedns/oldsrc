<?xml version="1.0"?>
   <project name="Echo" default="echo" basedir=".">
      <target name="echo">
         <echo message="workspace_loc: ${workspace_loc}"/>
         <echo message="project_loc: ${project_loc}"/>
         <echo message="basedir: ${basedir}"/>
      </target>
      <target name="dir">
         <echo message="dir of ${workspace_loc}"/>
         <exec dir="${workspace_loc}" executable="cmd.exe">
            <arg line="/c dir"/>
         </exec>
      </target>
   </project>
