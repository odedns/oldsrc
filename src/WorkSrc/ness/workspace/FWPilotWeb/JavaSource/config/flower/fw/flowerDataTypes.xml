<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE root SYSTEM "flower.dtd">
<root>

	<!-- ======================================== -->
	<!-- Data Bulders and Data Types Declarations -->
	<!-- ======================================== -->

	<typeDefinition>
													
		<!-- Generic String type -->
		<type name="string" class="java.lang.String">
		<builders>
			<builder fromType="com.ness.fw.ui.text.StringTextModel" builderTypeName="stringTextModelBuilder" method="buildStringFromXIString"/>		
		</builders>		
		</type>
		
		<!-- ================================ -->
		<!-- Boolean Builder and Type definition -->
		<!-- ================================ -->

		<builderTypeDefinition name="booleanBuilder" class="com.ness.fw.shared.builders.flower.BooleanBuilder">
		</builderTypeDefinition>
		
		<type name="boolean" class="java.lang.Boolean">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="booleanBuilder" method="build"/>
			</builders>
			<printer builderTypeName="booleanBuilder" method="print"/>
		</type>


		<!-- ================================ -->
		<!-- Date Builder and Type definition -->
		<!-- ================================ -->

		<builderTypeDefinition name="dateBuilder" class="com.ness.fw.shared.builders.flower.DateBuilder">
			<param name="defaultOutMaskLocalizableKey" value="date.defaultOutMask" class="java.lang.String"/>
			<param name="localizableInputMasksPreffix" value="date.inmask" class="java.lang.String"/>
		</builderTypeDefinition>
	
		<type name="date" class="java.util.Date">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="dateBuilder" method="buildFromString"/>
				<builder fromType="java.lang.Long" builderTypeName="dateBuilder" method="buildFromLong"/>
				<builder fromType="com.ness.fw.ui.text.DateTextModel" builderTypeName="dateTextModelBuilder" method="buildDateFromXIDate"/>		
			</builders>
			
			<printer builderTypeName="dateBuilder" method="printDate"/>
		</type>

		<!-- ================================ -->
		<!-- Long Builder and Type definition -->
		<!-- ================================ -->

		<builderTypeDefinition name="longBuilder" class="com.ness.fw.shared.builders.flower.NumberBuilder">
			<param name="defaultOutMaskLocalizableKey" value="long.defaultOutMask" class="java.lang.String"/>
		</builderTypeDefinition>

		<type name="long" class="java.lang.Long">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="longBuilder" method="buildLong"/>
				<builder fromType="com.ness.fw.ui.text.LongTextModel" builderTypeName="longTextModelBuilder" method="buildLongFromXILong"/>  
			</builders>
			<printer builderTypeName="longBuilder" method="printLong"/>
		</type>

		<!-- =================================== -->
		<!-- Integer Builder and Type definition -->
		<!-- =================================== -->

		<builderTypeDefinition name="integerBuilder" class="com.ness.fw.shared.builders.flower.NumberBuilder">
			<param name="defaultOutMaskLocalizableKey" value="integer.defaultOutMask" class="java.lang.String"/>
		</builderTypeDefinition>

		<type name="integer" class="java.lang.Integer">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="integerBuilder" method="buildInteger"/>
				<builder fromType="com.ness.fw.ui.text.IntegerTextModel" builderTypeName="integerTextModelBuilder" method="buildIntegerFromXIInteger"/>  
			</builders>
			<printer builderTypeName="integerBuilder" method="printInteger"/>
		</type>
	
		<!-- ================================== -->
		<!-- Double Builder and Type definition -->
		<!-- ================================== -->

		<builderTypeDefinition name="doubleBuilder" class="com.ness.fw.shared.builders.flower.NumberBuilder">
			<param name="defaultOutMaskLocalizableKey" value="double.defaultOutMask" class="java.lang.String"/>
		</builderTypeDefinition>
		
		<type name="double" class="java.lang.Double">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="doubleBuilder" method="buildDouble"/>
				<builder fromType="com.ness.fw.ui.text.DoubleTextModel" builderTypeName="doubleTextModelBuilder" method="buildDoubleFromXIDouble"/>  
			</builders>
			<printer builderTypeName="doubleBuilder" method="printDouble"/>
		</type>

		<!-- ====================================== -->
		<!-- BigDecimal Builder and Type definition -->
		<!-- ====================================== -->

		<builderTypeDefinition name="bigDecimalBuilder" class="com.ness.fw.shared.builders.flower.BigDecimalBuilder">
			<param name="roundMode" value="ROUND_HALF_UP" class="java.lang.String"/>
			<param name="length" value="10" class="java.lang.Integer"/>
			<param name="scale" value="2" class="java.lang.Integer"/>
			<param name="defaultOutMaskLocalizableKey" value="bigDecimal.defaultOutMask" class="java.lang.String"/>
		</builderTypeDefinition>
		
		<type name="bigDecimal" class="java.math.BigDecimal">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="bigDecimalBuilder" method="build"/>
				<builder fromType="com.ness.fw.ui.text.BigDecimalTextModel" builderTypeName="bigDecimalTextModelBuilder" method="buildBigDecimalFromXIBigDecimal"/>
			</builders>
			<printer builderTypeName="bigDecimalBuilder" method="print"/>
		</type>

		<!-- ================================ -->
		<!-- Time Builder and Type definition -->
		<!-- ================================ -->

		<builderTypeDefinition name="timeBuilder" class="com.ness.fw.shared.builders.flower.DateBuilder">
			<param name="defaultOutMaskLocalizableKey" value="time.defaultOutMask" class="java.lang.String"/>
			<param name="localizableInputMasksPreffix" value="time.inmask" class="java.lang.String"/>
		</builderTypeDefinition>
		
		<type name="time" class="java.util.Date">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="timeBuilder" method="buildFromString"/>
				<builder fromType="java.lang.Long" builderTypeName="timeBuilder" method="buildFromLong"/>
				<builder fromType="com.ness.fw.ui.text.TimeTextModel" builderTypeName="timeTextModelBuilder" method="buildTimeFromXITime"/>	
			</builders>
			<printer builderTypeName="timeBuilder" method="printTime"/>
		</type>

		<!-- ===================================== -->
		<!-- TimeStamp Builder and Type definition -->
		<!-- ===================================== -->

		<builderTypeDefinition name="timestampBuilder" class="com.ness.fw.shared.builders.flower.DateBuilder">
			<param name="defaultOutMaskLocalizableKey" value="timestamp.defaultOutMask" class="java.lang.String"/>
			<param name="localizableInputMasksPreffix" value="timestamp.inmask" class="java.lang.String"/>
		</builderTypeDefinition>
		
		<type name="timestamp" class="java.util.Date">
			<builders>
				<builder fromType="java.lang.String" builderTypeName="timestampBuilder" method="buildFromString"/>
				<builder fromType="java.lang.Long" builderTypeName="timestampBuilder" method="buildFromLong"/>
				<builder fromType="com.ness.fw.ui.text.TimestampTextModel" builderTypeName="timestampTextModelBuilder" method="buildTimestampFromXITimestamp"/>
			</builders>
			<printer builderTypeName="timestampBuilder" method="printTimestamp"/>
		</type>


	</typeDefinition>

</root>
