<?xml version="1.0" encoding="UTF-8"?>
<project name="Harel" default="Total" basedir=".">
<property name="frameWorkProject" value="FrameWorkWeb"/>

<!-- Set global properties -->
<property name="jar" value="batch" />
<property name="basePath" location="." />
<property name="temp" value="c:\temp"></property>


<target name="exportBatch">
	<!-- Exports the fw-->
	<jar  jarfile="${temp}/${jar}.jar">	
		 <manifest>
		 	<attribute name="Main-Class" value="com.ness.fw.job.HTTPRequestor"/>
		 </manifest>

	    <fileset  dir="..\${frameWorkProject}/WebContent/WEB-INF/classes">
	    	<include name="**/HTTPRequestor.class"/>
	    </fileset>

	    <fileset  dir="${basePath}/javaSource/">
	    	<include name="**/batch.properties"/>
	    </fileset>


	</jar>
</target>


<target name="Total" depends="exportBatch">
<!-- Buidl all projects and exports all files -->
<echo message="Total finished" />
</target>

</project>